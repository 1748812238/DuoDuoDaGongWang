<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/cl_title_bar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_main_select_titlebar"
        android:background="@drawable/shape_gradient"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/titlebar_address_img"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/tv_location_titlebar"
                android:layout_marginTop="2dp"
                android:text="定位中"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_select_titlebar"
            android:background="@drawable/rounded_rectangle_white_bg"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_select_message_titlebar"
                android:text="请输入工厂名称搜索"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_gzh_titlebar"
            android:text="公众号"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_title_bar"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        //返回箭头
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_title_left"
            android:text="left"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        //标题
        <TextView
            android:id="@+id/tv_title_middle"
            android:text="titile"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        //右侧图标
        <ImageView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/iv_rightIco"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        //右侧文字
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_title_right"
            android:text="right"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:id="@+id/view_title_line"
        android:background="@color/LightGray"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>