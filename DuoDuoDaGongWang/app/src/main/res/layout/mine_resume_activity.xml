<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/titlebar"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_no_resume_mr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:text="还没有工作经历呦~"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/ll_add_resume_mr"
                android:background="@drawable/rounded_rectangle_blue_bg"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="40dp"
                android:gravity="center"
                >

                <TextView
                    android:text="点击添加工作经历"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_resume_mr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="姓名"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_user_name_resume"
                android:hint="姓名"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/line_background"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="性别"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spin_user_sex_resume"
                android:entries="@array/spingsex"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/line_background"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="年龄"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_user_age_resume"
                android:hint="年龄"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/line_background"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="学历"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_user_education_resume"
                android:hint="学历"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/line_background"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="地址"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_user_address_resume"
                android:hint="地址"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/line_background"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="经验"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_user_experience_resume"
                android:hint="经验"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/line_background"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="电话"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_user_phoneNum_resume"
                android:hint="电话"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/line_background"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="意向职位"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_user_intention_resume"
                android:hint="意向职位"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/line_background"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/ll_save_resume"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_rectangle_blue_bg"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="保存"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>